
{
    "apps":[
      {
        "name": "merit",
        "cwd": "./",
        "script": "./bin/www",
        "min_uptime": "60s",
        "max_restarts": 30,
        "exec_mode" : "cluster_mode",
        "error_file" : "./logs/app-err.log",    
        "out_file" : "./logs/app-out.log",      
        "watch": false,
        "ignore_watch" : [                    
            "node_modules", "logs", "public"
        ],
        "max_memory_restart": "300M",         
        "autorestart": true   
      }
  ]}